<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/dashboard.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.DashboardController">
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <content>
                <VBox spacing="20.0">
                    <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                    </padding>
                    <children>
                        <Label text="Tableau de Bord" styleClass="title">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>

                        <!-- Stats Cards -->
                        <HBox spacing="20.0">
                            <children>
                                <VBox styleClass="card">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                    </padding>
                                    <children>
                                        <Label text="Total Candidats" styleClass="card-title" />
                                        <Label fx:id="totalCandidatsLabel" text="0" styleClass="card-value" />
                                    </children>
                                </VBox>
                                <VBox styleClass="card">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                    </padding>
                                    <children>
                                        <Label text="Taux de Réussite Code" styleClass="card-title" />
                                        <Label fx:id="tauxReussiteLabel" text="0%" styleClass="card-value" />
                                    </children>
                                </VBox>
                                <VBox styleClass="card">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                    </padding>
                                    <children>
                                        <Label text="Taux de Réussite Conduite" styleClass="card-title" />
                                        <Label fx:id="tauxReussiteConduiteLabel" text="0%" styleClass="card-value" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Stats Row 2 -->
                        <HBox spacing="20.0">
                            <children>
                                <VBox styleClass="card">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                    </padding>
                                    <children>
                                        <Label text="Revenus Mensuels" styleClass="card-title" />
                                        <Label fx:id="revenusLabel" text="0 DT" styleClass="card-value" />
                                    </children>
                                </VBox>
                                <VBox styleClass="card">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                    </padding>
                                    <children>
                                        <Label text="Moniteurs Actifs" styleClass="card-title" />
                                        <Label fx:id="moniteursLabel" text="0" styleClass="card-value" />
                                    </children>
                                </VBox>
                                <VBox styleClass="card">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                    </padding>
                                    <children>
                                        <Label text="Véhicules Disponibles" styleClass="card-title" />
                                        <Label fx:id="vehiculesLabel" text="0" styleClass="card-value" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Distribution par type de permis -->
                        <Label text="Distribution par Type de Permis" styleClass="subtitle" />
                        <HBox spacing="20.0">
                            <children>
                                <VBox styleClass="card">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                    </padding>
                                    <children>
                                        <Label text="Type A (Moto)" styleClass="card-title" />
                                        <Label fx:id="candidatsTypeALabel" text="0" styleClass="card-value" />
                                    </children>
                                </VBox>
                                <VBox styleClass="card">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                    </padding>
                                    <children>
                                        <Label text="Type B (Voiture)" styleClass="card-title" />
                                        <Label fx:id="candidatsTypeBLabel" text="0" styleClass="card-value" />
                                    </children>
                                </VBox>
                                <VBox styleClass="card">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                    </padding>
                                    <children>
                                        <Label text="Type C (Camion)" styleClass="card-title" />
                                        <Label fx:id="candidatsTypeCLabel" text="0" styleClass="card-value" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Alerts Section -->
                        <Label text="Alertes et Notifications" styleClass="subtitle" />

                        <VBox fx:id="alertsBox" spacing="10.0">
                            <!-- Alerts will be added dynamically -->
                            <children>
                                <HBox styleClass="alert, alert-warning">
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                    </padding>
                                    <children>
                                        <Label text="Véhicule TUN 8234 doit passer la visite technique dans 7 jours" />
                                    </children>
                                </HBox>
                                <HBox styleClass="alert, alert-danger">
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                    </padding>
                                    <children>
                                        <Label text="Assurance de Véhicule TUN 5643 expire dans 14 jours" />
                                    </children>
                                </HBox>
                                <HBox styleClass="alert, alert-info">
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                    </padding>
                                    <children>
                                        <Label text="Vidange de Véhicule TUN 9876 prévue dans 200 km" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>